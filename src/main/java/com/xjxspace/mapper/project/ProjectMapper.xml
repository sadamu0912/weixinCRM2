  <sql id="Base_Column_List" >
    project_id, project_name, project_progress, 
    project_state,project_state_code,
    project_image,project_view_count,project_love_count,project_comment_count,
    project_customer_city,project_customer_city_code,project_customer_name,project_customer_phone,
    project_cusomer_email,project_type_name,project_type_code,del,create_userid
